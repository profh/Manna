<p id="notice"><%= notice %></p>

<h1>Listing Cases</h1>

<table>
  <thead>
    <tr>
      <th>Client name</th>
      <th>Date submitted</th>
      <th>Summary</th>
      <th>Notes</th>
      <th>Status</th>
      <th>Deacon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cases.each do |case| %>
      <tr>
        <td><%= case.client_name %></td>
        <td><%= case.date_submitted %></td>
        <td><%= case.summary %></td>
        <td><%= case.notes %></td>
        <td><%= case.status %></td>
        <td><%= case.deacon_id %></td>
        <td><%= link_to 'Show', case %></td>
        <td><%= link_to 'Edit', edit_case_path(case) %></td>
        <td><%= link_to 'Destroy', case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

